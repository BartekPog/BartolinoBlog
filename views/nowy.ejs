<%- include("partials/head.ejs") -%>
  <div class="p-box">
    <form  action="/nowyPost" method="post">

      <h1><input type="text" name="title" placeholder="Tytuł" value="<%=post.title %>" required></h1>
      <textarea name="content" rows="15" placeholder="treść" cols="80" required><%=post.content%></textarea>
      <h6><input type="checkbox" name="extend"> Dodaj pole rozszerzające</h6>
      <input type="hidden" name="myID" value="<%=post.myID%>">
      <button type="submit" name="submit" class="btn btn-lg btn-outline-light btn-lista">Gotowe!</button>
    </form>
  </div>

